= render 'shared/form_errors', object: @user

= form_for([:admin, @user]) do |f|
  .field
    = f.label :name
    = f.text_field :name 
  .field
    = f.label :email
    = f.email_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .field
    = f.submit 'Create User'
