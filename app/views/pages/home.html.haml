= content_for :admin_contextual_links do
  = link_to 'Edit Page', edit_admin_page_path(@page)
#header_image{style: ("background-image: url(#{@page.banner});" if @page.banner?)}
- if @page.catchline?
  #page_catchline
    = raw @page.catchline
#teasers
  - Block.all.each do |block|
    .teaser
      %h2= block.title
      = raw block.body
      .more_link_container
        = link_to 'Read More', block.link_path


#page_content

  #page_content_inner.home_content_inner
    = raw @page.body

    #popular_products_container
      %ul
        %li= link_to 'HOME OWNERS - NEW PLASTIC OIL TANKS (open sans 16px semibold)', '#'
        %li= link_to 'HOME OWNERS - NEW STEEL OIL TANKS', '#'
        %li= link_to 'COMMERCIAL - NEW PLASTIC BUNDED TANKS', '#'
        %li= link_to 'COMMERCIAL - CUSTOM MADE STEEL TANKS', '#'
        %li= link_to 'AGRICULTURAL - CUSTOM MADE STEEL TANKS', '#'
        %li= link_to 'AGRICULTURAL - FUELMASTER TANKS', '#'
        %li= link_to 'OIL SECURITY SYSTEMS4REQUEST A FREE QUOTATION', '#'

  = render 'shared/promotions_container', page: @page