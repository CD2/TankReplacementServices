- provide :title, @page.name
= content_for :admin_contextual_links do
  = link_to 'Edit Page', edit_admin_page_path(@page)


#header_image{style: ("background-image: url(#{@page.banner});" if @page.banner?)}

- if @page.catchline?
  #page_catchline
    = raw @page.catchline

#page_content
  #page_content_inner
    = raw @page.body

  = render 'shared/promotions_container', page: @page